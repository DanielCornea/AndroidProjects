<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_books"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dcornea.musicalstructureapp.Books">

    <Button
        android:id="@+id/front_book"
        style="@style/item"
        android:background="@color/first"
        android:text="@string/book" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/front_book"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here you shall find a list of audiobooks" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_id_1"
                style="@style/author_item"
                android:paddingRight="10dp"
                android:text="Get rich, no work required" />

            <TextView
                style="@style/author_sub_item"
                android:layout_below="@id/book_id_1"
                android:paddingRight="10dp"
                android:text="Daniel Cornea" />

            <Button
                android:id="@+id/button_0"
                style="@style/player_button"
                android:layout_toRightOf="@id/book_id_1"
                android:background="@drawable/play_button" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_id_2"
                style="@style/author_item"
                android:paddingRight="10dp"
                android:text="Get rich, the hard way" />

            <TextView
                style="@style/author_sub_item"
                android:layout_below="@id/book_id_2"
                android:paddingRight="10dp"
                android:text="Udacity Reviewer" />

            <Button
                android:id="@+id/button_1"
                style="@style/player_button"
                android:layout_toRightOf="@id/book_id_2"
                android:background="@drawable/play_button" />

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/front_auth"
            style="@style/item"
            android:background="@color/second"
            android:text="@string/author" />

        <Button
            android:id="@+id/front_genre"
            style="@style/item"
            android:background="@color/third"
            android:text="@string/genre" />
    </LinearLayout>


</RelativeLayout>
