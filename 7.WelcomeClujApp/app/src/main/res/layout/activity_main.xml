    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dcornea.welcomeclujapp.MainActivity">

    <TextView
        android:id="@+id/main_res"
        style="@style/itemList"
        android:background="@color/colorAccent"
        android:text="@string/res" />

    <TextView
        android:id="@+id/main_sites"
        style="@style/itemList"
        android:background="@color/colorPrimaryDark"
        android:text="@string/histSites" />

    <TextView
        android:id="@+id/main_univ"
        style="@style/itemList"
        android:background="@color/colorAccent"
        android:text="@string/univ" />

    <TextView
        android:id="@+id/main_theatre"
        style="@style/itemList"
        android:background="@color/colorPrimary"
        android:text="@string/lead" />

</LinearLayout>
